{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Marathon Shell Configuration",
  "description": "Build-time configuration for Marathon Shell - acts like Android build.xml with sane defaults",
  "version": "1.0.0",
  
  "responsive": {
    "description": "Base screen dimensions and DPI configuration",
    "baseDPI": 160,
    "baseHeight": 800,
    "defaultUserScaleFactor": 1.0,
    "userScaleOptions": [0.75, 1.0, 1.25, 1.5],
    "tallScreenRatio": 1.2,
    "squareScreenTolerance": 100
  },
  
  "zIndex": {
    "description": "Z-index layering for UI components",
    "background": 0,
    "mainContent": 90,
    "bottomSection": 150,
    "taskSwitcher": 200,
    "appWindow": 600,
    "peekGesture": 650,
    "peek": 700,
    "settings": 700,
    "settingsPage": 700,
    "lockScreen": 1000,
    "pinScreen": 1100,
    "search": 1150,
    "statusBarApp": 1200,
    "quickSettings": 1200,
    "quickSettingsOverlay": 1300,
    "navBarApp": 1600,
    "statusBarDrag": 1700,
    "keyboard": 3000
  },
  
  "gestures": {
    "description": "Gesture thresholds and physics (in base pixels, scaled at runtime)",
    "edgeWidth": 50,
    "peekThreshold": 100,
    "commitThreshold": 200,
    "swipeShort": 80,
    "swipeLong": 150,
    "quickSettingsDismissThreshold": 0.30,
    "lockScreenSwipeDistance": 0.20,
    "lockScreenCommitProgress": 0.25
  },
  
  "animations": {
    "description": "Animation durations in milliseconds",
    "fast": 150,
    "normal": 200,
    "slow": 300,
    "durationFast": 150,
    "durationNormal": 250,
    "durationSlow": 400,
    "keyboardShow": 120,
    "lockScreenUnlock": 150
  },
  
  "session": {
    "description": "Session and timeout configuration",
    "timeout": 600000,
    "autoLock": true
  },
  
  "performance": {
    "description": "Performance and optimization settings",
    "performanceMode": false,
    "enableAnimations": true,
    "enableAntialiasing": true
  },
  
  "keyboard": {
    "description": "Virtual keyboard behavior",
    "autoShow": true,
    "autoDismiss": true,
    "predictionBarHeight": 40
  },
  
  "layout": {
    "description": "Layout dimensions in base pixels (scaled at runtime)",
    "statusBarHeight": 44,
    "navBarHeight": 20,
    "bottomBarHeight": 100,
    "actionBarHeight": 72,
    "hubHeaderHeight": 80
  },
  
  "safeArea": {
    "description": "Safe area insets (0 = auto-detect from system)",
    "top": 0,
    "bottom": 0,
    "left": 0,
    "right": 0,
    "useStatusBarAsTop": true,
    "useNavBarAsBottom": true
  },
  
  "pageIndicators": {
    "description": "Page indicator sizes in base pixels",
    "sizeActive": 28,
    "sizeInactive": 16,
    "hubSizeActive": 40,
    "hubSizeInactive": 20
  },
  
  "lockScreen": {
    "description": "Lock screen component sizes",
    "notificationSize": 40,
    "shortcutSize": 64,
    "clockFontSize": 96
  },
  
  "scrolling": {
    "description": "Flick and scroll physics",
    "flickDecelerationFast": 8000,
    "flickVelocityMax": 5000,
    "touchFlickDeceleration": 25000,
    "touchFlickVelocity": 8000,
    "pageViewFlickDeceleration": 20000,
    "pageViewMaxFlickVelocity": 10000
  },
  
  "touchTargets": {
    "description": "Touch target sizes (BB10-inspired, in base pixels)",
    "large": 90,
    "medium": 70,
    "small": 60,
    "indicator": 50,
    "minimum": 45
  },
  
  "appGrid": {
    "description": "App grid configuration",
    "iconSize": 72,
    "gridSpacing": 20,
    "labelHeight": 32,
    "columnsPhone": 4,
    "rowsPhone": 5,
    "columnsTablet": 5,
    "rowsTablet": 4,
    "columnsDesktop": 6,
    "rowsDesktop": 4,
    "phoneBreakpoint": 700,
    "tabletBreakpoint": 900
  },
  
  "cards": {
    "description": "Card dimensions and styling",
    "height": 160,
    "widthRatio": 0.42,
    "bannerHeight": 60,
    "radius": 20
  },
  
  "typography": {
    "description": "Font sizes in base pixels (scaled at runtime)",
    "xsmall": 12,
    "small": 14,
    "medium": 16,
    "large": 18,
    "xlarge": 24,
    "xxlarge": 32,
    "huge": 48,
    "gigantic": 96,
    "fontFamily": "Inter",
    "fontFamilyMono": "JetBrains Mono"
  },
  
  "spacing": {
    "description": "Spacing system in base pixels",
    "xsmall": 5,
    "small": 10,
    "medium": 16,
    "large": 20,
    "xlarge": 32,
    "xxlarge": 40
  },
  
  "borders": {
    "description": "Border radii and widths",
    "radiusSharp": 0,
    "radiusSmall": 4,
    "radiusMedium": 8,
    "radiusLarge": 12,
    "radiusXLarge": 20,
    "widthThin": 1,
    "widthMedium": 2,
    "widthThick": 3
  },
  
  "icons": {
    "description": "Icon sizes in base pixels",
    "small": 20,
    "medium": 32,
    "large": 40,
    "xlarge": 64,
    "appSplash": 128
  },
  
  "shadows": {
    "description": "Shadow configuration",
    "small": 2,
    "medium": 4,
    "large": 8,
    "opacity": 0.3,
    "color": "#000000"
  },
  
  "modals": {
    "description": "Modal and overlay sizing",
    "maxWidthRatio": 0.85,
    "maxHeightRatio": 0.75,
    "toastHeight": 64,
    "hudSize": 128
  },
  
  "quickSettings": {
    "description": "Quick Settings panel configuration",
    "tileSize": 92,
    "tileSpacing": 12,
    "gridColumns": {
      "phone": 2,
      "phoneWide": 3,
      "tablet": 4
    },
    "gridBreakpoints": {
      "phone": 800,
      "phoneWide": 1200
    },
    "maxRows": 5,
    "minRows": 3,
    "maxWidthTablet": 800
  },
  
  "statusBar": {
    "description": "Status bar configuration",
    "clockAlignment": "center",
    "showBattery": true,
    "showNetwork": true,
    "showTime": true,
    "iconSpacing": 8
  },
  
  "navBar": {
    "description": "Navigation bar configuration",
    "gestureThreshold": 0.3,
    "swipeUpVelocity": 500
  },
  
  "taskSwitcher": {
    "description": "Task switcher configuration",
    "cardScale": 0.65,
    "cardOpacity": 0.7,
    "cardMargin": 8,
    "showBanner": false
  },
  
  "bottomBar": {
    "description": "Bottom bar shortcut configuration",
    "iconMarginLeft": 20,
    "iconMarginRight": 20,
    "showPhoneShortcut": true,
    "showCameraShortcut": true
  },
  
  "features": {
    "description": "Feature flags",
    "enableWayland": true,
    "enableBluetooth": true,
    "enableWifi": true,
    "enableMobileData": true,
    "enableVPN": true,
    "enableHotspot": true,
    "enableAirplaneMode": true,
    "enableDND": true,
    "enableLowPowerMode": true,
    "enableTorch": true,
    "enableAutoRotate": true
  },
  
  "debug": {
    "description": "Debug and logging configuration",
    "enableDebugMode": false,
    "enableVerboseLogging": false,
    "showPerformanceOverlay": false,
    "logToFile": true
  }
}

